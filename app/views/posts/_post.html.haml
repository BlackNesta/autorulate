%li{ id: "post#{post.id}" }
  = link_to gravatar_for(post.user, size: 50), post.user
  %span.post_title= link_to post.title, post_path(post)
  %span.content= post.content
  - if post.images.attached?
    = link_to image_tag(display_image(post.images.first)), post_path(post)
  %span.timestamp
    = "Posted #{time_ago_in_words(post.created_at)} ago."
    - if current_user?(post.user)
      = link_to "delete", post ,method: :delete, data: { confirm: "You sure?" }
    - else
      %span.favorite_link
      - if !current_user.favorites.include?(post)
        = link_to raw("<i class='far fa-star'></i>"), add_to_favorites_post_path(post), method: :post, remote: true
      - else
        = link_to raw("<i class='fa fa-star favorite'></i>"), remove_from_favorites_post_path(post), method: :delete, remote: true

  