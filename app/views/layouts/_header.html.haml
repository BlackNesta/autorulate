%header{class: "navbar navbar-fixed-top navbar-inverse"}
  .container
    = link_to "autorulate", root_path, id: "logo"
    %nav
      .navbar-header
        %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", type: "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
      %ul#bs-example-navbar-collapse-1.nav.navbar-nav.navbar-right.collapse.navbar-collapse
        - if logged_in?
          - if current_user.admin
            %li= link_to "Users", users_path
          - else
            %li= link_to "New Post", new_post_path
            %li= link_to "Messages", chatrooms_path(current_user)
            %li= link_to "Favorites", favorites_path
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
              Account
              %b.caret
            %ul.dropdown-menu
              %li= link_to "Profile", current_user
              %li= link_to "Settings", edit_user_path(current_user)
              %li.divider
              %li= link_to "Log out", logout_path, method: :delete
        - else
          %li= link_to "Log in", login_path
          %li= link_to "Sign up", signup_path