- provide(:title, 'Sign up')
%h1 Sign up
.row
  .col-md-6.col-md-offset-3
    = form_for(@user, url: signup_path, local: true) do |f|
      = render 'shared/error_messages'

      = f.label :name
      = f.text_field :name, class: "form-control", autocomplete: "off", required: true

      = f.label :email
      = f.email_field :email, class: "form-control", autocomplete: "off", required: true

      = f.label :password
      = f.password_field :password, class: "form-control", autocomplete: "off", required: true

      = f.label :password_confirmation
      = f.password_field :password_confirmation, class: "form-control", autocomplete: "off", required: true

      = f.submit "Create my account", class: "btn btn-primary"