= provide :title, @user.name
.row
  %aside.col-md-4
    %section.user_info
      %h1
        = gravatar_for @user
        %br
        = @user.name
        = @user.email
  .col-md-8
    - if @user.posts.any?
      %h3= "Cars for sale: #{@user.posts.count}"
      %ol.posts
        = render @posts
      = will_paginate @posts